<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo13.ClientController" spacing="10" alignment="TOP_CENTER">
    <Label text="Bakery Shop - Client Area" styleClass="header-label"/>

    <!-- Section for product ID input and add to basket button -->
    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="productIdField" promptText="Enter Product ID"/>
        <Button text="Add Product to Basket" onAction="#handleAddProductToBasket"/>
    </HBox>

    <!-- ListView for displaying products -->
    <VBox spacing="5">
        <Label text="Available Products:" styleClass="subheader-label"/>
        <ListView fx:id="productsListView" styleClass="list-view"/>
    </VBox>

    <!-- Buttons for viewing basket and placing orders -->
    <HBox spacing="10" alignment="CENTER">
        <StackPane fx:id="contentArea" styleClass="list-view"/>
        <Button text="View Basket" onAction="#handleViewBasket"/>
        <Button text="Place Order" onAction="#handlePlaceOrder"/>
    </HBox>
    <ComboBox fx:id="paymentMethodComboBox" />
    <TextField fx:id="streetAddressField" promptText="Street Address"/>
    <TextField fx:id="cityField" promptText="City"/>
    <TextField fx:id="postalCodeField" promptText="Postal Code"/>
    <TextField fx:id="countryField" promptText="Country"/>


    <!-- Logout button -->
    <Button text="Logout" onAction="#handleLogout" styleClass="logout-button"/>
</VBox>
