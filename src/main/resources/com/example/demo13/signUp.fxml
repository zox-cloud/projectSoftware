<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>


<BorderPane prefHeight="496.0" prefWidth="493.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo13.SignUpController">
   <top>
      <VBox fx:id="signUpBox" alignment="TOP_CENTER" prefHeight="583.0" prefWidth="493.0" spacing="15" BorderPane.alignment="CENTER">
          <Label style="-fx-font-size: 24px;" text="Sign Up" />
          <TextField fx:id="usernameField" maxWidth="-Infinity" promptText="Username" />
          <PasswordField fx:id="passwordField" maxWidth="-Infinity" promptText="Password" />
          <PasswordField fx:id="confirmPasswordField" maxWidth="-Infinity" promptText="Confirm Password" />
          <ComboBox fx:id="accountTypeComboBox" editable="false" promptText="Account Type">
              <items>
                  <FXCollections fx:factory="observableArrayList">
                      <String fx:value="Client" />
                      <String fx:value="Admin" />
                  </FXCollections>
              </items>
          </ComboBox>
          <Button onAction="#handleRegisterAction" text="Register" />
         <Hyperlink onAction="#handleSwitchToLogin" text="Already hava an account? Log in!" />
          <Label fx:id="statusLabel" textFill="red" />
      </VBox>
   </top>
</BorderPane>
